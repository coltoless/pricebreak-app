<% content_for :title, "Monitoring Dashboard" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Monitoring Dashboard</h1>
          <p class="mt-2 text-gray-600">Monitor flight price tracking and system health</p>
        </div>
        <div class="flex space-x-4">
          <%= link_to "Start Monitoring", start_monitoring_path, method: :post, 
              class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-medium" %>
          <%= link_to "Stop Monitoring", stop_monitoring_path, method: :post, 
              class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md font-medium" %>
          <%= link_to "Restart", restart_monitoring_path, method: :post, 
              class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium" %>
        </div>
      </div>
    </div>

    <!-- System Health Overview -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">System Health</p>
            <p class="text-2xl font-semibold text-gray-900 capitalize"><%= @monitoring_stats[:system_health] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Active Filters</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @monitoring_stats[:active_filters] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Alerts</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @monitoring_stats[:total_alerts] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Recent Checks</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @monitoring_stats[:recent_price_checks] %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Monitoring Status -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Price Monitoring -->
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Price Monitoring</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Status</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <%= @monitoring_stats[:system_health] == 'healthy' ? 'Running' : 'Degraded' %>
              </span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Last Check</span>
              <span class="text-sm text-gray-900">
                <%= @monitoring_stats[:last_check] ? time_ago_in_words(@monitoring_stats[:last_check]) + ' ago' : 'Never' %>
              </span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Filters Monitored</span>
              <span class="text-sm text-gray-900"><%= @monitoring_stats[:monitored_count] || 0 %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Alerts Triggered</span>
              <span class="text-sm text-gray-900"><%= @monitoring_stats[:alerts_triggered] || 0 %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Data Analysis -->
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Data Analysis</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Status</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= @analysis_stats[:is_running] ? 'Running' : 'Stopped' %>
              </span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Last Analysis</span>
              <span class="text-sm text-gray-900">
                <%= @analysis_stats[:last_analysis] ? time_ago_in_words(@analysis_stats[:last_analysis]) + ' ago' : 'Never' %>
              </span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Routes Analyzed</span>
              <span class="text-sm text-gray-900"><%= @analysis_stats[:routes_analyzed] || 0 %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Anomalies Detected</span>
              <span class="text-sm text-gray-900"><%= @analysis_stats[:anomalies_detected] || 0 %></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Data Quality Metrics -->
    <div class="bg-white rounded-lg shadow mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Data Quality Metrics</h3>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <h4 class="text-sm font-medium text-gray-500 mb-3">Price History</h4>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Total Records</span>
                <span class="text-sm font-medium"><%= @data_quality[:total_price_history] %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Valid</span>
                <span class="text-sm font-medium text-green-600"><%= @data_quality[:valid_price_history] %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Suspicious</span>
                <span class="text-sm font-medium text-yellow-600"><%= @data_quality[:suspicious_price_history] %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Invalid</span>
                <span class="text-sm font-medium text-red-600"><%= @data_quality[:invalid_price_history] %></span>
              </div>
            </div>
          </div>

          <div>
            <h4 class="text-sm font-medium text-gray-500 mb-3">Provider Data</h4>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Total Records</span>
                <span class="text-sm font-medium"><%= @data_quality[:total_provider_data] %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Valid</span>
                <span class="text-sm font-medium text-green-600"><%= @data_quality[:valid_provider_data] %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Suspicious</span>
                <span class="text-sm font-medium text-yellow-600"><%= @data_quality[:suspicious_provider_data] %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Invalid</span>
                <span class="text-sm font-medium text-red-600"><%= @data_quality[:invalid_provider_data] %></span>
              </div>
            </div>
          </div>

          <div>
            <h4 class="text-sm font-medium text-gray-500 mb-3">Alerts</h4>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Total</span>
                <span class="text-sm font-medium"><%= @data_quality[:total_alerts] %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Active</span>
                <span class="text-sm font-medium text-green-600"><%= @data_quality[:active_alerts] %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Triggered</span>
                <span class="text-sm font-medium text-blue-600"><%= @data_quality[:triggered_alerts] %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Expired</span>
                <span class="text-sm font-medium text-gray-600"><%= @data_quality[:expired_alerts] %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Alerts -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h3 class="text-lg font-medium text-gray-900">Recent Alerts</h3>
          <%= link_to "View All", flight_alerts_path, class: "text-sm text-blue-600 hover:text-blue-500" %>
        </div>
      </div>
      <div class="divide-y divide-gray-200">
        <% if @recent_alerts.any? %>
          <% @recent_alerts.each do |alert| %>
            <div class="px-6 py-4">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <div class="flex items-center">
                    <h4 class="text-sm font-medium text-gray-900"><%= alert.route_description %></h4>
                    <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <%= alert.status.humanize %>
                    </span>
                  </div>
                  <p class="text-sm text-gray-500 mt-1">
                    Price dropped to $<%= alert.current_price %> (was $<%= alert.target_price %>)
                    <span class="text-green-600 font-medium">Save $<%= alert.savings_amount %></span>
                  </p>
                </div>
                <div class="text-right">
                  <p class="text-sm text-gray-500"><%= time_ago_in_words(alert.created_at) %> ago</p>
                  <p class="text-xs text-gray-400">Confidence: <%= (alert.alert_quality_score * 100).round %>%</p>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-8 text-center">
            <p class="text-gray-500">No recent alerts</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex justify-center space-x-4">
      <%= link_to "Trigger Analysis", trigger_analysis_path, method: :post, 
          class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium" %>
      <%= link_to "Trigger Cleanup", trigger_cleanup_path, method: :post, 
          class: "bg-yellow-600 hover:bg-yellow-700 text-white px-4 py-2 rounded-md font-medium" %>
      <%= link_to "View Logs", "#", 
          class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md font-medium" %>
    </div>
  </div>
</div>

<script>
  // Auto-refresh dashboard every 30 seconds
  setInterval(function() {
    fetch('<%= metrics_path %>')
      .then(response => response.json())
      .then(data => {
        // Update metrics on the page
        console.log('Updated metrics:', data);
      })
      .catch(error => console.error('Error fetching metrics:', error));
  }, 30000);
</script>



