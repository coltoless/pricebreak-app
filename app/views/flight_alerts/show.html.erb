<% content_for :title, "Alert Details - #{@alert.route_description}" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <nav class="flex" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-4">
              <li>
                <%= link_to "Price Alerts", flight_alerts_path, 
                    class: "text-gray-400 hover:text-gray-500" %>
              </li>
              <li>
                <div class="flex items-center">
                  <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span class="ml-4 text-sm font-medium text-gray-500">Alert Details</span>
                </div>
              </li>
            </ol>
          </nav>
          <h1 class="mt-2 text-3xl font-bold text-gray-900"><%= @alert.route_description %></h1>
          <p class="mt-2 text-gray-600">Monitor price changes for this route</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Edit Alert", edit_flight_filter_path(@alert.flight_filter), 
              class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
          <%= link_to "Back to Alerts", flight_alerts_path, 
              class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Alert Status Card -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Alert Status</h2>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="text-sm font-medium text-gray-500">Status</label>
                <div class="mt-1">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= status_badge_class(@alert.status) %>">
                    <%= @alert.status.humanize %>
                  </span>
                </div>
              </div>
              
              <div>
                <label class="text-sm font-medium text-gray-500">Quality Score</label>
                <div class="mt-1 flex items-center">
                  <div class="w-24 bg-gray-200 rounded-full h-2 mr-2">
                    <div class="bg-blue-600 h-2 rounded-full" style="width: <%= (@alert.alert_quality_score || 0) * 100 %>%"></div>
                  </div>
                  <span class="text-sm text-gray-600"><%= ((@alert.alert_quality_score || 0) * 100).round %>%</span>
                </div>
              </div>
              
              <div>
                <label class="text-sm font-medium text-gray-500">Target Price</label>
                <div class="mt-1 text-lg font-semibold text-gray-900">$<%= @alert.target_price %></div>
              </div>
              
              <div>
                <label class="text-sm font-medium text-gray-500">Current Price</label>
                <div class="mt-1 text-lg font-semibold text-gray-900">
                  <% if @alert.current_price %>
                    $<%= @alert.current_price %>
                  <% else %>
                    <span class="text-gray-400">Not available</span>
                  <% end %>
                </div>
              </div>
              
              <div>
                <label class="text-sm font-medium text-gray-500">Potential Savings</label>
                <div class="mt-1 text-lg font-semibold text-green-600">
                  <% if @alert.price_drop_amount && @alert.price_drop_amount > 0 %>
                    $<%= @alert.price_drop_amount %>
                    (<%= @alert.price_drop_percentage_calculated %>%)
                  <% else %>
                    <span class="text-gray-400">No savings yet</span>
                  <% end %>
                </div>
              </div>
              
              <div>
                <label class="text-sm font-medium text-gray-500">Last Checked</label>
                <div class="mt-1 text-sm text-gray-900">
                  <%= @alert.last_checked&.strftime('%b %d, %Y at %I:%M %p') || 'Never' %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Price History Chart -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Price History</h2>
          </div>
          <div class="p-6">
            <% if @price_history.any? %>
              <div class="h-64 flex items-center justify-center">
                <div class="text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                  <p class="mt-2 text-sm text-gray-500">Price history chart will be displayed here</p>
                </div>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
                <p class="mt-2 text-sm text-gray-500">No price history available yet</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Notification History -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Notification History</h2>
          </div>
          <div class="p-6">
            <% if @notification_history.any? %>
              <div class="space-y-4">
                <% @notification_history.each do |notification| %>
                  <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <% if notification['success'] %>
                          <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                        <% else %>
                          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                          </svg>
                        <% end %>
                      </div>
                      <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900">
                          <%= notification['method']&.humanize || 'Unknown' %>
                        </p>
                        <p class="text-sm text-gray-500">
                          <%= notification['content'] || 'No content' %>
                        </p>
                      </div>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= Time.parse(notification['timestamp']).strftime('%b %d, %Y at %I:%M %p') rescue 'Unknown time' %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5v-5a7.5 7.5 0 1 0-15 0v5h5l-5 5-5-5h5V7a7.5 7.5 0 1 1 15 0v10z"/>
                </svg>
                <p class="mt-2 text-sm text-gray-500">No notifications sent yet</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Quick Actions</h2>
          </div>
          <div class="p-6 space-y-3">
            <% if @alert.status == 'active' %>
              <%= link_to "Pause Alert", pause_flight_alert_path(@alert), 
                  method: :patch, 
                  class: "w-full bg-yellow-600 hover:bg-yellow-700 text-white px-4 py-2 rounded-lg font-medium transition-colors text-center block" %>
            <% elsif @alert.status == 'paused' %>
              <%= link_to "Resume Alert", resume_flight_alert_path(@alert), 
                  method: :patch, 
                  class: "w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors text-center block" %>
            <% end %>
            
            <%= link_to "Test Notification", test_notification_flight_alert_path(@alert), 
                method: :post, 
                class: "w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors text-center block" %>
            
            <%= link_to "Update Quality Score", update_quality_flight_alert_path(@alert), 
                method: :patch, 
                class: "w-full bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg font-medium transition-colors text-center block" %>
            
            <%= link_to "Delete Alert", flight_alert_path(@alert), 
                method: :delete, 
                data: { confirm: 'Are you sure you want to delete this alert?' }, 
                class: "w-full bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors text-center block" %>
          </div>
        </div>

        <!-- Quality Metrics -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Quality Metrics</h2>
          </div>
          <div class="p-6 space-y-4">
            <div>
              <label class="text-sm font-medium text-gray-500">Overall Score</label>
              <div class="mt-1 flex items-center">
                <div class="w-24 bg-gray-200 rounded-full h-2 mr-2">
                  <div class="bg-blue-600 h-2 rounded-full" style="width: <%= (@quality_metrics[:current_score] || 0) * 100 %>%"></div>
                </div>
                <span class="text-sm text-gray-600"><%= ((@quality_metrics[:current_score] || 0) * 100).round %>%</span>
              </div>
            </div>
            
            <div>
              <label class="text-sm font-medium text-gray-500">Trend</label>
              <div class="mt-1">
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  <%= @quality_metrics[:trend]&.humanize || 'Unknown' %>
                </span>
              </div>
            </div>
            
            <div>
              <label class="text-sm font-medium text-gray-500">Notification Success Rate</label>
              <div class="mt-1 text-sm text-gray-900">
                <%= @quality_metrics[:factors][:notification_success_rate] %>%
              </div>
            </div>
            
            <div>
              <label class="text-sm font-medium text-gray-500">Price Accuracy</label>
              <div class="mt-1 text-sm text-gray-900">
                <%= @quality_metrics[:factors][:price_accuracy] %>%
              </div>
            </div>
          </div>
        </div>

        <!-- Recommendations -->
        <% if @quality_metrics[:recommendations].any? %>
          <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
              <h2 class="text-lg font-medium text-gray-900">Recommendations</h2>
            </div>
            <div class="p-6">
              <ul class="space-y-2">
                <% @quality_metrics[:recommendations].each do |recommendation| %>
                  <li class="flex items-start">
                    <svg class="flex-shrink-0 h-5 w-5 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                    <span class="ml-2 text-sm text-gray-700"><%= recommendation %></span>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% def status_badge_class(status) %>
  <% case status %>
  <% when 'active' %>
    bg-green-100 text-green-800
  <% when 'paused' %>
    bg-yellow-100 text-yellow-800
  <% when 'triggered' %>
    bg-blue-100 text-blue-800
  <% when 'expired' %>
    bg-gray-100 text-gray-800
  <% else %>
    bg-gray-100 text-gray-800
  <% end %>
<% end %>
