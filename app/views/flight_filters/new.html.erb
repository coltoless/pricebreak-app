<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm border-b sticky top-0 z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div class="flex items-center">
          <a href="/" class="text-2xl font-bold text-blue-600">priceBreak</a>
          <span class="ml-4 text-gray-500">Create Flight Filter</span>
        </div>
        <div class="flex items-center space-x-4">
          <a href="/" class="text-gray-500 hover:text-gray-900 transition-colors">Home</a>
          <%= link_to 'My Filters', flight_filters_path, class: "text-gray-500 hover:text-gray-900 transition-colors" %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="py-8 px-4">
    <div data-controller="flight-filter"
         data-flight-filter-initial-filter-value="{}">
      <div data-flight-filter-target="container" class="min-h-[400px]">
        <!-- Loading indicator while React component mounts -->
        <div class="flex items-center justify-center py-12">
          <div class="text-center">
            <div class="inline-block h-8 w-8 border-4 border-blue-600 border-t-transparent rounded-full animate-spin mb-4"></div>
            <p class="text-gray-600">Loading flight filter form...</p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t mt-16">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <div class="text-center text-gray-500">
        <p>&copy; 2024 priceBreak. All rights reserved.</p>
      </div>
    </div>
  </footer>
</div>
