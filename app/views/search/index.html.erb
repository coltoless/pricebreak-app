<div class="search-page">
  <div class="search-header">
    <div class="search-bar-container">
      <form class="search-form" action="/search" method="get">
        <input type="text" name="q" value="<%= params[:q] %>" placeholder="Search events, venues, artists..." class="search-input">
        <button type="submit" class="search-button">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
        </button>
      </form>
    </div>
  </div>

  <div class="search-content">
    <aside class="filters-sidebar">
      <div class="filter-section">
        <h3>Categories</h3>
        <% @categories.each do |category, subcategories| %>
          <div class="filter-group">
            <div class="filter-header">
              <h4><%= category %></h4>
              <button class="toggle-button" aria-expanded="true">â–¼</button>
            </div>
            <div class="filter-options">
              <% subcategories.each do |subcategory| %>
                <label class="filter-option">
                  <input type="checkbox" name="category[]" value="<%= subcategory %>">
                  <span><%= subcategory %></span>
                </label>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="filter-section">
        <h3>Price Range</h3>
        <div class="filter-options">
          <% @price_ranges.each do |range| %>
            <label class="filter-option">
              <input type="radio" name="price_range" value="<%= range %>">
              <span><%= range %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="filter-section">
        <h3>Date</h3>
        <div class="filter-options">
          <% @date_ranges.each do |range| %>
            <label class="filter-option">
              <input type="radio" name="date_range" value="<%= range %>">
              <span><%= range %></span>
            </label>
          <% end %>
        </div>
        <div class="date-range-inputs" style="display: none;">
          <input type="date" name="start_date" class="date-input">
          <span>to</span>
          <input type="date" name="end_date" class="date-input">
        </div>
      </div>

      <div class="filter-section">
        <h3>Venue Type</h3>
        <div class="filter-options">
          <% @venues.each do |venue| %>
            <label class="filter-option">
              <input type="checkbox" name="venue[]" value="<%= venue %>">
              <span><%= venue %></span>
            </label>
          <% end %>
        </div>
      </div>

      <button class="apply-filters">Apply Filters</button>
      <button class="reset-filters">Reset All</button>
    </aside>

    <main class="search-results">
      <div class="results-header">
        <div class="results-count">
          <h2>Search Results</h2>
          <span class="count"><%= @total_events %> events found</span>
        </div>
        <div class="sort-container">
          <label for="sort">Sort by:</label>
          <select id="sort" name="sort" class="sort-select">
            <% @sort_options.each do |option| %>
              <option value="<%= option %>"><%= option %></option>
            <% end %>
          </select>
        </div>
      </div>

      <div class="results-grid">
        <% if @events.any? %>
          <% @events.each do |event| %>
            <div class="event-card">
              <div class="event-image">
                <img src="<%= event[:image_url] || 'https://via.placeholder.com/300x200' %>" alt="<%= event[:name] %>">
                <div class="event-price">From $<%= event[:price] %></div>
              </div>
              <div class="event-details">
                <h3 class="event-name"><%= event[:name] %></h3>
                <p class="event-venue"><%= event[:venue] %></p>
                <p class="event-date"><%= event[:date].strftime("%B %d, %Y at %I:%M %p") %></p>
                <div class="event-category">
                  <span class="category-tag"><%= event[:category] %></span>
                  <span class="subcategory-tag"><%= event[:subcategory] %></span>
                </div>
                <a href="<%= event[:ticket_url] %>" class="event-link" target="_blank">View Tickets</a>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="no-results">
            <p>No events found matching your criteria.</p>
            <p>Try adjusting your filters or search terms.</p>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</div>

