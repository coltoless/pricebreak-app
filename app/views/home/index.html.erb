        <h2>Get Notified When We Launch</h2>
        <p>Be the first to know when priceBreak goes live and start getting tickets at your price!</p>
        
        <% if flash[:error] %>
          <div class="alert error">
            <%= flash[:error] %>
          </div>
        <% end %>
        
        <%= form_tag launch_subscribers_path, method: :post, class: "notification-form" do %>
          <div class="input-group">
            <%= email_field_tag :email, nil, 
                placeholder: "Enter your email address",
                required: true,
                class: "email-input" %>
            <%= submit_tag "Notify Me", class: "submit-btn" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

