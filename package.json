{
  "name": "pricebreak",
  "version": "1.0.0",
  "description": "AI-Powered Price Intelligence for Smart Ticket Shopping",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "esbuild app/javascript/application.js --bundle --outdir=app/assets/builds --public-path=/assets --format=esm --loader:.js=jsx --loader:.ts=ts --loader:.tsx=tsx && cp app/assets/builds/application.js public/application.js && mkdir -p public/assets && cp app/assets/builds/application.css public/assets/application.css && esbuild app/javascript/packs/enhanced_flight_filter.js --bundle --outdir=public --public-path=/ --format=esm --loader:.js=jsx --loader:.ts=ts --loader:.tsx=tsx",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css --watch",
    "build:css:prod": "tailwindcss -i ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css --minify",
    "dev": "npm run build -- --watch",
    "dev:css": "npm run build:css",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coltoless/pricebreak-app.git"
  },
  "keywords": [
    "price-monitoring",
    "ai",
    "tickets",
    "flight-alerts"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/coltoless/pricebreak-app/issues"
  },
  "homepage": "https://github.com/coltoless/pricebreak-app#readme",
  "dependencies": {
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.3.0",
    "firebaseui": "^6.1.0",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "task-master-ai": "^0.21.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "esbuild-rails": "^1.0.7",
    "tailwindcss": "^4.1.12"
  }
}
